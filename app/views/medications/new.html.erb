<div class='bg-body-secondary p-3'>
  <div class='bg-body container py-3'>

    <%= form_with model: @medication_prescription_form, url: patient_medications_path do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

      <div class='p-3'>
        <%= f.label :medicine_name, 'お薬名', class: 'form-label'  %>
        <%= f.text_field :medicine_name, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :description, '説明', class: 'form-label' %>
        <%= f.text_area :description, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :dosage, '一回あたりの量', class: 'form-label' %>
        <%= f.text_field :dosage, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :side_effect, '副作用', class: 'form-label' %>
        <%= f.text_area :side_effect, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :frequency, '飲むタイミング', class: 'form-label' %>
        <%= f.text_field :frequency, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :duration, '処方期間', class: 'form-label' %>
        <%= f.text_field :duration, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :doctor_name, '医者名', class: 'form-label' %>
        <%= f.text_field :doctor_name, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :clinic_name, '病院名', class: 'form-label' %>
        <%= f.text_field :clinic_name, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :phone_number, '電話番号', class: 'form-label' %>
        <%= f.text_field :phone_number, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :pharmacist, '薬剤師名', class: 'form-label' %>
        <%= f.text_field :pharmacist, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :pharmacy_name, '薬局名', class: 'form-label' %>
        <%= f.text_field :pharmacy_name, class:"form-control" %>
      </div>

      <div class='p-3'>
        <%= f.label :phone_number, '電話番号', class: 'form-label' %>
        <%= f.text_field :phone_number, class:"form-control" %>
      </div>

      <div class='p-3 d-grid gap-2 col-6 mx-auto'>
        <%= f.submit "記録する" %>
      </div>
    <% end %>
  </div>
</div>